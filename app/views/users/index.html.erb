<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show（見る）', user %></td>
        <td><%= link_to 'Edit（編集）', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy（削除）', user, method: :delete, data: { confirm: 'Are you sure?（本当に？）' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User（ユーザー登録）', new_user_path %>
